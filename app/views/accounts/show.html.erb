<!-- Encabezado -->
<section>
  <!-- Account resume -->
  <div class="row">
    <div class="col-12 col-md-6 mb-4">
      <div class="card text-bg-primary shadow text-center">
        <div class="card-body">
          <h5 class="card-title">Mi cuenta</h5>
          <p class="card-text">Cuenta No. <%= @account.code %></p>
          <div id="amount">
            <%= render "accounts/amount", account: @account %>
          </div>
        </div>
      </div>
    </div>

    <!-- Loan request partial -->
    <%= turbo_frame_tag "new_loan_request", class: "col-12 col-md-6 mb-4" do %>
      <%= render "accounts/new_loan_card", account: @account %>
    <% end %>
  </div>
</section>

<!-- Transacciones -->
<section>
  <div class="d-flex flex-wrap justify-content-between">
    <h3>Transacciones</h3>
    <div class="d-flex gap-2 align-items-center">
      <%= link_to "Deposito", deposit_account_transaction_path(@account), data: { turbo_frame: "remote_modal" } ,class: "btn btn-secondary" %>
      <%= link_to "Transferencia", transfer_account_transaction_path(@account), data: { turbo_frame: "remote_modal" }, class: "btn btn-success" %>
      <%= link_to "Retiro", withdraw_account_transaction_path(@account), data: { turbo_frame: "remote_modal" }, class: "btn btn-warning" %>
    </div>
  </div>

  <div class="overflow-auto">
    <table class="table">
      <thead>
        <tr>
          <th class="col-12 col-md-1">Tipo</th>
          <th class="col-12 col-md-2">Monto</th>
          <th class="col-12 col-md-3">Codigo</th>
          <th class="col-12 col-md-3">Fecha</th>
          <th class="col-12 col-md-3">Opciones</th>
        </tr>
      </thead>
    </table>
    <%= turbo_frame_tag "transactions" do %>
      <%= render @transactions %>
    <% end %>
  </div>
</section>

