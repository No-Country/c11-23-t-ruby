<% flash.each do |flash_type, message| %>
  <% if flash_type == "alert" %>
    <div class="alert alert-warning alert-dismissible fade show" role="alert" data-controller="removals" data-action="animationend->removals#remove">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% elsif flash_type == "notice"%>
    <div class="alert alert-success alert-dismissible fade show" role="alert" data-controller="removals" data-action="animationend->removals#remove">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% else %>
    <div class="alert alert-primary alert-dismissible fade show" role="alert" data-controller="removals" data-action="animationend->removals#remove">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
<% end %>
