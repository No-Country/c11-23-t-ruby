<%= simple_form_for [account, transaction] do |f| %>
  <% if transaction.errors.any? %>
    <div class="alert alert-primary">
      <%= transaction.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.hidden_field :transaction_type, value: "withdraw" %>
  <%= f.input :amount, label: "Cantidad", input_html: { autofocus: true, class: 'form-control' } %>

  <%= f.submit class: "btn btn-warning my-2" %>
<% end %>
