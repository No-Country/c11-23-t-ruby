<%= simple_form_for [account, loan] do |f| %>
  <% if loan.errors.any? %>
    <div class="alert alert-primary">
      <%= loan.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :amount, label: "Cantidad", input_html: { autofocus: true, class: 'form-control' } %>

  <%= f.submit class: "btn btn-warning my-2" %>
<% end %>
